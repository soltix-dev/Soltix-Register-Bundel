{
    "name": "soltix-dev/register-bundle",
    "description": "Register bundle for Symfony framework",
    "type": "symfony-bundle",
    "license": "proprietary",
    "require": {
        "php": ">=8.1",
        "symfony/framework-bundle": "^6.1"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpmd/phpmd": "^2.12",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "check-standards": [
            "phpcs --standard=phpcs.xml.dist",
            "phpmd src xml phpmd.xml"
        ]
    },
    "autoload": {
        "psr-4": {
            "Soltix\\Bundle\\Register\\": "src/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Soltix\\Bundle\\Register\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Soltix",
            "email": "soltix@soltix.pl"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/soltix-dev/register-bundle"
        }
    ],
    "minimum-stability": "stable"
}
